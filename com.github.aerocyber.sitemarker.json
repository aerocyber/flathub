{
    "app-id" : "io.github.aerocyber.sitemarker",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "44",
    "sdk" : "org.gnome.Sdk",
    "command" : "sitemarker",
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland",
	"--filesystem=home",
        "--filesystem=~/.sitemarker:create"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
        {
            "name" : "sitemarker",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/aerocyber/sitemarker.git",
                    "tag": "1.0.0",
		    "commit": "9bcced6020280e6dca3879fd8db0130f64332e6d"
                }
            ]
        }
    ]
}
